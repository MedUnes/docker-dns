#!/bin/bash
set -e

SERVICE=docker-dns
BIN=/usr/bin/docker-dns

echo "üì¶ prerm: Preparing to remove $SERVICE"

# Stop the systemd service if running
if systemctl is-active --quiet "$SERVICE.service"; then
    echo "üîß Stopping $SERVICE.service..."
    systemctl stop "$SERVICE.service" || true
fi

# Carefully kill only the actual docker-dns binary process
echo "üßπ Ensuring no lingering docker-dns process is running..."
for pid in $(pgrep -f "$BIN"); do
    # Get full command line
    cmd=$(ps -p "$pid" -o args=)

    # Only kill if the command exactly matches the binary path
    if [[ "$cmd" == "$BIN"* && "$pid" -ne "$$" ]]; then
        echo "‚ö†Ô∏è  Killing PID $pid (cmd: $cmd)"
        kill -9 "$pid" || true
    else
        echo "‚úÖ Skipping PID $pid (cmd: $cmd)"
    fi
done

echo "‚úÖ prerm complete"
exit 0
