#!/bin/bash
set -e

PATH=/usr/sbin:/usr/bin:/sbin:/bin
SERVICE=docker-dns
BIN=/usr/bin/docker-dns
BACKUP_DIR=/var/lib/docker-dns/backup
STATE_DIR=/var/lib/docker-dns

RESOLVED_DROPIN=/etc/systemd/resolved.conf.d/docker-dns.conf
DNSMASQ_DROPIN=/etc/dnsmasq.d/99-docker-dns.conf
UNBOUND_DROPIN=/etc/unbound/unbound.d/docker-dns.conf
NM_DROPIN=/etc/NetworkManager/conf.d/90-docker-dns.conf

restore_last() {
    prefix="$1"
    dst="$2"
    last=$(ls -1t "$BACKUP_DIR" 2>/dev/null | grep "^$prefix" | head -n1 || true)
    [ -n "$last" ] && mv -f "$BACKUP_DIR/$last" "$dst"
}

case "$1" in
remove|purge)
    systemctl disable --now "$SERVICE.service" || true
    systemctl daemon-reload || true
    setcap -r "$BIN" 2>/dev/null || true
    if dpkg -L "$SERVICE" 2>/dev/null | grep -qx "$BIN"; then
        :
    else
        rm -f "$BIN"
    fi
    ;;
esac

if [ "$1" = "purge" ]; then
    echo "dockerâ€‘dns: rolling back DNS integration"

    rm -f "$RESOLVED_DROPIN"   && restore_last resolved.conf "$RESOLVED_DROPIN"
    rm -f "$DNSMASQ_DROPIN"    && restore_last dnsmasq "$DNSMASQ_DROPIN"
    rm -f "$UNBOUND_DROPIN"    && restore_last unbound "$UNBOUND_DROPIN"
    rm -f "$NM_DROPIN"

    systemctl try-restart systemd-resolved dnsmasq NetworkManager unbound || true
    systemctl daemon-reload || true

    if [ -L /etc/resolv.conf ]; then
        restore_last resolv.conf /etc/resolv.conf || true
    fi

    rm -rf "$BACKUP_DIR"
    rmdir --ignore-fail-on-non-empty "$STATE_DIR" 2>/dev/null || true
fi

exit 0
